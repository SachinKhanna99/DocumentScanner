<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SignupActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_camera_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="30sp"
        android:id="@+id/card"
        android:layout_below="@id/imageView"
        android:layout_marginTop="40dp"
        android:layout_margin="30dp"
        android:background="@drawable/card_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sinup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGNUP"
                android:textSize="27sp"

                android:textAlignment="center"
                android:layout_marginTop="15dp"

                android:textColor="#005357"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/sinup"
                android:layout_marginLeft="30dp"
                android:textColor="#005357"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPersonName"
               android:layout_below="@+id/username"
                android:textSize="17dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:drawableTint="@android:color/holo_blue_dark"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
              android:layout_below="@+id/name"
                android:layout_marginLeft="30dp"
                android:textColor="#005357"/>
            <EditText
                android:id="@+id/signup_email"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textEmailAddress"
               android:layout_below="@id/email"
                android:textSize="17dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/ps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
              android:layout_below="@+id/signup_email"
                android:layout_marginLeft="30dp"
                android:textColor="#005357"/>
            <EditText
                android:id="@+id/signup_password"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:textSize="17dp"
                android:ems="10"

                android:inputType="textPassword"
                android:layout_marginBottom="5dp"
                android:layout_alignLeft="@+id/signup_email"
                android:layout_alignStart="@+id/signup_email"
                android:layout_below="@id/ps"
                />
            <ImageView
                android:id="@+id/open_eye"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_toRightOf="@+id/signup_password"

                android:layout_marginTop="40dp"
                android:tint="#005357"
                android:tag="show"
                android:visibility="gone"
                android:src="@drawable/ic_remove_red_eye_black_24dp"
                android:layout_below="@id/signup_email"/>
            <ImageView
                android:id="@+id/close_eye"
                android:visibility="visible"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_toRightOf="@+id/signup_password"
                android:layout_marginTop="40dp"
                android:src="@drawable/eye"
                android:tint="#005357"
                android:layout_below="@id/signup_email"/>

            <TextView
                android:id="@+id/ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number(Optional)"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/signup_password"
                android:layout_marginLeft="30dp"
                android:textColor="#005357"/>
            <EditText
                android:id="@+id/signup_phone"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:ems="12"
                android:textSize="17dp"

                android:inputType="phone"
                android:layout_alignLeft="@+id/signup_password"
                android:layout_alignStart="@+id/signup_password"
                android:layout_below="@id/ph" />
            <Button
                android:id="@+id/signup_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/signup_phone"
                android:layout_alignStart="@+id/signup_password"
                android:layout_alignLeft="@+id/signup_password"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/login_button"
                android:text="Signup"
                android:textColor="@android:color/white"

                />
        </RelativeLayout>





    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/card"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:text="Login Here"
        android:textColor="#005357"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>