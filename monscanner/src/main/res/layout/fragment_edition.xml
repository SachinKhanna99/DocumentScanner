<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".EditionFragment">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0"
        android:layout_marginLeft="150dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/rotation_gauche"
            android:scaleType="centerInside"
            android:src="@drawable/rotategauche" />

        <ImageButton
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/rotation_droite"
            android:scaleType="centerInside"
            android:src="@drawable/rotatedroite" />

        <Button
            android:id="@+id/validationButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/grey"
            android:layout_marginEnd="8dp"
            android:text="Done" />
    </LinearLayout>


    <ImageView
        android:id="@+id/rognedImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:contentDescription="@string/image_scannee" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/originalButton"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_image"
            android:text="Original"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/summerButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/summerthree"
            android:drawableTint="@color/white"
            android:layout_height="wrap_content"
            android:text="Summer"
            android:textColor="@color/white"
            style="@style/Widget.AppCompat.ButtonBar"/>

        <Button
            android:id="@+id/magicButton"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_enhance_image"
            android:text="Enhanced"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/grayButton"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_gray"
            android:text="Shades"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bwButton"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_black_and_white"
            android:text="B and W"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>